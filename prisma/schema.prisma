generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Drop {
  id       Int      @id @default(autoincrement())
  name     String
  bucket   Bucket   @relation(fields: [bucketid], references: [id])
  bucketid Int
  price    Int
  date     DateTime @default(now())
  card     Card     @relation(fields: [cardid], references: [id])
  cardid   Int
}

model Bucket {
  id    Int    @id @default(autoincrement())
  name  String
  drops Drop[]
}

model Card {
  id   Int    @id @default(autoincrement())
  name String
  Drop Drop[]
}
